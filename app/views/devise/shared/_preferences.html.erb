<% active   = "flex items-center px-3 py-2 text-sm font-medium text-green-700 border-l-4 border-green-500 bg-green-50 hover:bg-green-50 hover:text-green-700 group" %>
<% inactive = "flex items-center px-3 py-2 text-sm font-medium text-gray-900 border-l-4 border-transparent hover:bg-gray-50 hover:text-gray-900 group" %>
<% active_svg   = "flex-shrink-0 w-6 h-6 mr-3 -ml-1 text-green-400 group-hover:text-green-500" %>
<% inactive_svg = "flex-shrink-0 w-6 h-6 mr-3 -ml-1 text-gray-400 group-hover:text-gray-500" %>

<aside class="py-6 lg:col-span-3">
  <nav>
    <%= link_to edit_user_registration_path(section: 'profile'), class: @section == 'profile' ? active : inactive do %>
      <svg class="<%= @section == 'profile' ? active_svg : inactive_svg %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="truncate">
        Profile
      </span>
    <% end %>

    <%= link_to edit_user_registration_path(section: 'notifications'), class: @section == 'notifications' ? active : inactive do %>
      <svg class="<%= @section == 'notifications' ? active_svg : inactive_svg %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      <span class="truncate">
        Notifications
      </span>
    <% end %>

    <%= link_to edit_user_registration_path(section: 'security'), class: @section == 'security' ? active : inactive do %>
      <svg class="<%= @section == 'security' ? active_svg : inactive_svg %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
      </svg>
      <span class="truncate">
        Security
      </span>
    <% end %>
  </nav>
</aside>
