<div class="px-4 py-6 sm:p-6 lg:pb-8">
  <div>
    <h2 class="text-lg font-medium text-gray-900 leading-6">Password</h2>
    <p class="mt-1 text-sm text-gray-500">
    This information should be kept private.
    </p>
  </div>

  <div class="flex flex-col mt-6 lg:flex-row">
    <div class="flex-grow space-y-6">
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <div class="flex mt-1 rounded-md shadow-sm">
          <%= f.password_field :password, autocomplete: "new-password", class: "flex-grow block w-full min-w-0 border-gray-300 rounded-none focus:ring-green-500 focus:border-green-500 rounded-r-md sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <div class="flex mt-1 rounded-md shadow-sm">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "flex-grow block w-full min-w-0 border-gray-300 rounded-none focus:ring-green-500 focus:border-green-500 rounded-r-md sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
        <p class="mt-2 text-sm text-gray-500">We need your current password to confirm your changes.</p>
        <div class="flex mt-1 rounded-md shadow-sm">
          <%= f.password_field :current_password, autocomplete: "current_password-password", class: "flex-grow block w-full min-w-0 border-gray-300 rounded-none focus:ring-green-500 focus:border-green-500 rounded-r-md sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
